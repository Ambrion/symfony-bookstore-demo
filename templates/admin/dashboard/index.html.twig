{% extends '@EasyAdmin/layout.html.twig' %}

{% block main %}
    <h5>Добро пожаловать в админ-часть демо-проекта</h5>
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="result-tab" data-bs-toggle="tab" data-bs-target="#result" type="button" role="tab" aria-controls="result" aria-selected="true">Реализация</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="task-tab" data-bs-toggle="tab" data-bs-target="#task" type="button" role="tab" aria-controls="profile" aria-selected="false">Задача</button>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="result" role="tabpanel" aria-labelledby="result-tab">
            {{ htmlContentResult|raw }}
        </div>
        <div class="tab-pane fade" id="task" role="tabpanel" aria-labelledby="task-tab">
            {{ htmlContentTask|raw }}
        </div>
    </div>

{% endblock main %}
